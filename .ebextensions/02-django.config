container_commands:
  00_makemigrations:
    command: "source /opt/python/run/venv/bin/activate && python main_platform/manage.py makemigrations --noinput"
    leader_only: true
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python main_platform/manage.py migrate --noinput"
    leader_only: true

option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: config.wsgi:application
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: config.settings

